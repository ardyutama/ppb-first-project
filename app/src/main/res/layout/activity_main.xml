<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tasksText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todolist"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="43dp"
        tools:layout_conversion_absoluteWidth="85dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="75dp">

        <CheckBox
            android:id="@+id/todoCheckBox"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/holo_green_dark"
            android:paddingStart="8dp"
            tools:text="Go to the market and bring vegetables immediately today." />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/todoCheckBox"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="155dp">

        <CheckBox
            android:id="@+id/todoCheckBox"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/holo_green_dark"
            android:paddingStart="8dp"
            tools:text="Go to the market and bring vegetables immediately today." />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/todoCheckBox"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_orange_light"
        android:src="@android:drawable/ic_menu_add"
        tools:layout_conversion_absoluteHeight="56dp"
        tools:layout_conversion_absoluteWidth="56dp"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="643dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="233dp">

        <CheckBox
            android:id="@+id/todoCheckBox"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/holo_green_dark"
            android:paddingStart="8dp"
            tools:text="Go to the market and bring vegetables immediately today." />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/todoCheckBox"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_delete"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="347dp"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
